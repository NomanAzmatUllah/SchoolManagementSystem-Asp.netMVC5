@model IEnumerable<WebApplication5.Models.eventss>

@{
    ViewBag.Title = "Index";
}

<style>
    .btn {
        color: dodgerblue;
        background-color: white;
        text-decoration: none;
    }

        .btn:hover {
            color: white;
            background-color: dodgerblue;
        }

    .heading {
        height: 45px;
        background-color: dodgerblue;
        color: white;
        width: 100%;
        border-radius: 14px;
        text-align: center;
    }
</style>

<div class="heading">

    <h3 style="color:white; padding-top: 4px;font-family: calibri">Events Details</h3>
</div>
<br />


@using (Html.BeginForm("Index", "eventsses"))
{
    <input type="text" id="search" name="search" class="col-md-10" placeholder="Search-Id" />

    <input type="submit" value="Search" class="btn btn-danger btn-default" />
}

<br />
<button class="btn btn-default" onclick="location.href='@Url.Action("Create", "eventsses")';return false;">Add Events</button>

<br /><br />

<table class="table table-hover table-condensed table-responsive">
    <tr>
        <th>
            Name
        <th>

            Date
        </th>
        <th>
            Event-Time
 
                </th>
        <th>
            Event-day
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.events_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.event_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.event_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.event_day)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.enents_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.enents_id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.enents_id })
        </td>
    </tr>
}

</table>
