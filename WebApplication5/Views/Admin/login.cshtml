@model WebApplication5.Models.tbl_admin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   @*// <link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/Content/bootstrap.paper.min.css" rel="stylesheet" />
    <title>login</title>

    <style>
        .img {
            height: 162px;
            margin-left: 249px;
        }

        .container1 {
            margin-left: 327px;
            margin-top: 82px;
        }

        .btn {
            color: dodgerblue;
            background-color: white;
        }

            .btn:hover {
                color: white;
                background-color: dodgerblue;
            }

        .image {
            height: 269px;
            margin-left: 882px;
            margin-top: -333px;
        }

        .image1 {
            height: 269px;
            margin-top: -274px;
            margin-left: -14px;
        }
    </style>
</head>



<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        <div class="container1">
            <img class="img img-responsive img-circle" src="~/images/login-admin.png" />
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Ad_name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Ad_name, new { htmlAttributes = new { @class = "form-control",placeholder="Name" } })
                        @Html.ValidationMessageFor(model => model.Ad_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Ad_password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Ad_password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                        @Html.ValidationMessageFor(model => model.Ad_password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <input type="submit" value="Login" class="btn btn-block btn-default" />
                    </div>
                </div>
            </div>
        </div>
        <div>
            <img class="image img-responsive" src="~/images/2011_07_fp_summerreadingwriting_z.jpg" />
        </div>

        <div>
            <img class="image1 img-responsive" src="~/images/How_Do_Children_Learn_To_Read.jpg" />

        </div>

    }
    

 
</body>
</html>
